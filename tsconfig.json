{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "maxNodeModuleJsDepth": 1,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "~",
    "declaration": false,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "stripInternal": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "**/dist/*",
    "**/node_modules/*"
  ]
}